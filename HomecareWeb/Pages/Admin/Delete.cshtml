@page "{id:int}"
@model DeleteModel
@{
    ViewData["Title"] = "Delete Request";
}

<h2>Are you sure you want to delete this request?</h2>

<div class="alert alert-warning">
    <strong>@Model.ServiceRequest.FullName</strong> – @Model.ServiceRequest.RequestedService
</div>

<form method="post">
    <button type="submit" class="btn btn-danger">Yes, Delete</button>
    <a asp-page="RequestList" class="btn btn-secondary">Cancel</a>
</form>

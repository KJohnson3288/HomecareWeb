@page
@model RequestServiceModel
@{
    ViewData["Title"] = "Request a Service";
}

<h2>Request a Homecare Service</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<form method="post">
    <div class="mb-3">
        <label asp-for="ServiceRequest.FullName" class="form-label"></label>
        <input asp-for="ServiceRequest.FullName" class="form-control" />
        <span asp-validation-for="ServiceRequest.FullName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="ServiceRequest.PhoneNumber" class="form-label"></label>
        <input asp-for="ServiceRequest.PhoneNumber" class="form-control" />
        <span asp-validation-for="ServiceRequest.PhoneNumber" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="ServiceRequest.Email" class="form-label"></label>
        <input asp-for="ServiceRequest.Email" class="form-control" />
        <span asp-validation-for="ServiceRequest.Email" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="ServiceRequest.RequestedService" class="form-label"></label>
        <input asp-for="ServiceRequest.RequestedService" class="form-control" />
        <span asp-validation-for="ServiceRequest.RequestedService" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="ServiceRequest.Notes" class="form-label"></label>
        <textarea asp-for="ServiceRequest.Notes" class="form-control"></textarea>
    </div>

    <button type="submit" class="btn btn-primary">Submit Request</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}



